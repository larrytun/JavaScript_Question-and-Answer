{{#if updateAnswerForm}}
<div class="well">
  <h2>Update Answer</h2>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=answer.author}}
    </div>
    <div class="form-group">
      <label for="content">Answer</label>
      {{input value=content id="content" placeholder=answer.content}}
    </div>
    <div class="form-group">
      <label for="rating">Rating</label>
      {{input value=rating id="rating" placeholder=answer.rating}}
    </div>
    <button {{action 'update' answer}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'updateAnswerForm'}}>Update</button>
{{/if}}
