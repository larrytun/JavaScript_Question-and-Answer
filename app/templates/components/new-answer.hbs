{{#if addNewAnswer}}
<div class="well">
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>
        <div class="form-group">
          <label for="answer">Answer</label>
          {{input value=content id="content"}}
        </div>
        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
</div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
